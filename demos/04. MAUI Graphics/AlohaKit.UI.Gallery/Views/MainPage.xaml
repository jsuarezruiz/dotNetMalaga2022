<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="AlohaKit.UI.Gallery.Views.MainPage"
    Title="AlohaKit UI">
    <ContentPage.Content>
        <StackLayout
            Padding="12">
            <Button 
                Text="Using C#"
                Clicked="OnCSharpButtonClicked"/>
            <Button
                Text="Using XAML"
                Clicked="OnXamlButtonClicked"/>
            <Button
                Text="Custom Drawn Controls"
                Clicked="OnCustomControlsButtonClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>